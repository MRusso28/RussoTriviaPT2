<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ser210.quinnipiac.edu.triviaapinavdrawer.FavoriteDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="You Favorited:"
        android:textColor="#1018ff"
        android:id="@+id/question_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:id="@+id/question_details"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="450dp"
        android:id="@+id/details_back"
        android:text="Back"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="350dp"
        android:id="@+id/details_remove"
        android:text="Delete"/>

    <fragment
        class="ser210.quinnipiac.edu.triviaapinavdrawer.TriviaFragment"
        android:id="@+id/image_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
