<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_theme"
    tools:context="ser210.quinnipiac.edu.triviaapinavdrawer.ThemeActivity">


    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/choose_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="SETTINGS"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="48dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/choose_text"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:text="PLEASE CHOOSE YOUR BACKGROUND COLOR"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACK"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="140dp"
            android:text="WHITE"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="126dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="240dp"
            android:text="RED"
            tools:layout_editor_absoluteX="265dp"
            tools:layout_editor_absoluteY="133dp" />


        <TextView
            android:id="@+id/choose_font"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:text="PLEASE CHOOSE YOUR FONT STYLE"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOLED"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="300dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/button2Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="140dp"
            android:text="HALLOW"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="126dp" />

        <Button
            android:id="@+id/button3Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="240dp"
            android:text="GAMING"
            tools:layout_editor_absoluteX="265dp"
            tools:layout_editor_absoluteY="133dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="140dp"
        android:text="BACK"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="133dp" />

    </RelativeLayout>

